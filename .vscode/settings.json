// Place your settings in this file to overwrite default and user settings.
{
  // Disable vscode from running prettier on save
  // ESLint now handles formatting our code with prettier integration
  "[javascript]": {
    "editor.formatOnSave": false
  },
  // Enable/disable default JavaScript formatter (For Prettier)
  "javascript.format.enable": false,
  // Allows ESLint to run when we save
  "eslint.alwaysShowStatus": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/public": true,
    "**/.cache": true
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#800000",
    "activityBar.activeBackground": "#800000",
    "activityBar.activeBorder": "#bf0013",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#bf0013",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#4d0000",
    "titleBar.inactiveBackground": "#4d0000",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#4d0000",
    "statusBarItem.hoverBackground": "#800000",
    "statusBar.foreground": "#e7e7e7"
  },
  "peacock.color": "#4d0000",
  // Allows ESLint to run when we save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
